docker cp ./ssl/000-default.conf prestashop-prestashop-git-1:/etc/apache2/sites-available/000-default.conf
docker cp ./ssl/apache2.conf prestashop-prestashop-git-1:/etc/apache2/apache2.conf
docker cp ./ssl/ssl_sql.sql prestashop-mysql-1:/ssl_sql.sql
docker cp ./ssl/ssl_sql.sh prestashop-mysql-1:/ssl_sql.sh

docker exec prestashop-prestashop-git-1 openssl req -newkey rsa:2048 -new -nodes -x509 -days 365 -keyout /etc/ssl/private/apache-selfsigned.key -out /etc/ssl/certs/apache-selfsigned.crt -subj "/C=PL/ST=Pomerania/L=Gdansk/O=PG/OU=./CN=."
docker exec prestashop-prestashop-git-1 a2enmod ssl
docker exec prestashop-prestashop-git-1 service apache2 reload

docker exec prestashop-mysql-1 chmod +x /ssl_sql.sh

docker exec prestashop-mysql-1 /bin/bash /ssl_sql.sh
